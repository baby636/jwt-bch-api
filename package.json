{
  "name": "jwt-bch-api",
  "version": "1.0.0",
  "description": "A REST API for user management and paying for JWT tokens to access other REST APIs",
  "main": "auth-api.js",
  "scripts": {
    "start": "node auth-api.js",
    "test": "export AUTH_ENV=test && npm run prep-test && nyc --reporter=text mocha --timeout 15000 --exit test/unit/",
    "test:integration": "export AUTH_ENV=test && npm run prep-test && mocha --timeout 25000 --exit test/integration/",
    "lint": "standard --env mocha --fix",
    "docs": "./node_modules/.bin/apidoc -i src/ -o docs",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coverage:report": "export AUTH_ENV=test && npm run prep-test && nyc --reporter=html mocha --exit test/unit/",
    "prep-test": "node util/users/delete-all-test-users.js && cp ./config/bkup-wallet.json ./config/wallet.json"
  },
  "keywords": [
    "koa-api-boilerplate",
    "api",
    "koa",
    "koa2",
    "boilerplate",
    "es6",
    "mongoose",
    "passportjs",
    "apidoc"
  ],
  "author": "Chris Troutner <chris.troutner@gmail.com>",
  "license": "MIT",
  "apidoc": {
    "title": "jwt-bch-api",
    "url": "localhost:5000"
  },
  "repository": "Permissionless-Software-Foundation/jwt-bch-api",
  "dependencies": {
    "@psf/bch-js": "6.1.0",
    "axios": "^1.6.8",
    "bch-util": "^1.2.3",
    "bcryptjs": "^2.4.3",
    "glob": "^7.1.6",
    "jsonwebtoken": "^9.0.2",
    "kcors": "^2.2.2",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-convert": "^2.0.0",
    "koa-generic-session": "^2.1.1",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.3",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "line-reader": "^0.4.0",
    "mongoose": "^5.12.4",
    "nodemailer": "^6.4.17",
    "p-retry": "^4.1.0",
    "passport-local": "^1.0.0",
    "slp-cli-wallet": "^3.1.0",
    "winston": "^3.3.4",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "apidoc": "^1.1.0",
    "chai": "^4.3.10",
    "coveralls": "^3.1.0",
    "eslint": "8.44.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^5.0.0",
    "mocha": "^9.1.2",
    "nyc": "^17.0.0",
    "semantic-release": "^24.0.0",
    "sinon": "^9.2.4",
    "standard": "^17.1.0"
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
